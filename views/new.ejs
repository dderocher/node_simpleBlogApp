<% include ./partials/header %>

<div class="ui main text container segment">
    <div class="ui huge header">New Blog</div>
    
    <form action="/blogs" method="POST" class="ui form">
        <div>
            <label for="title">Title:</label>
            <input type="text" id="title" name="blog[title]">
        </div>
        <div>
            <label for="image">Image:</label>
            <input type="text" id="image" name="blog[image]">
        </div>
        <div>
            <label for="body">Body:</label>
            <!--<input type="text" id="body" name="blog[body]">-->
            <textarea id="body" name="blog[body]"></textarea>
        </div>
        
        <div class="ui inverted segment">
            <input type="submit" class="ui big inverted grey button">
        </div>
    </form>

</div>

